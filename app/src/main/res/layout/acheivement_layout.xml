<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/achievementName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement Name"
            android:textColor="@color/text_color"/>
        <TextView
            android:id="@+id/acievementType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project"/>
        <TextView
            android:id="@+id/publishedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Published Date : Jan 2021"/>
        <Button
            android:id="@+id/achievementViewCredential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Credential"
            android:textColor="@color/tile_text_color"
            android:fontFamily="@font/cantora_one"
            android:backgroundTint="#00000000"
            />
    </LinearLayout>

</LinearLayout>