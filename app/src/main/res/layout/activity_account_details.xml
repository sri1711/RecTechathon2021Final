<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account_details_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center">

                    <include layout="@layout/item_layout_title" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/ibtn_logout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_logout_black_24dp_1"
                    app:rippleColor="@color/hint_color" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_user_profileImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@null"
                    android:src="@drawable/def_user_avatar" />

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cantora_one"
                    android:gravity="center"
                    android:text="Sara Aditi"
                    android:textColor="@color/title_text_color"
                    android:textSize="38sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cantora_one"
                        android:gravity="center"
                        android:text="190701985"
                        android:textColor="@color/title_text_color" />

                    <ImageButton
                        android:id="@+id/copyBtn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ripple_effect_button"
                        android:src="@drawable/ic_content_copy"
                        app:backgroundTint="#00FFFFFF" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/item_tile"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textColor="@color/title_text_color"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/email" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingHorizontal="15dp"
                        android:text="test@rajalakshmi.edu.in"
                        android:textColor="@color/tile_text_color"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_local_phone_24" />


                    <TextView
                        android:id="@+id/tv_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingHorizontal="15dp"
                        android:text="9856236254"
                        android:textColor="@color/tile_text_color"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_category_24" />


                    <TextView
                        android:id="@+id/tvdept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingHorizontal="15dp"
                        android:text="Computer Science Engineering"
                        android:textColor="@color/tile_text_color"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_tile"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills Sets"
                    android:textColor="@color/title_text_color"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Python"
                            android:textColor="@color/tile_text_color" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Java"
                            android:textColor="@color/tile_text_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deep Learning"
                            android:textColor="@color/tile_text_color" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_tile"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Certificates "
                        android:textColor="@color/title_text_color"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/add_certificates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_baseline_add_24"
                            app:rippleColor="@color/hint_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="add" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/certificateName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Certificate Name"
                        android:textColor="@color/text_color"/>
                    <TextView
                        android:id="@+id/organization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NPTEL"/>
                    <TextView
                        android:id="@+id/issueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issued Date : Jan 2021"/>
                    <Button
                        android:id="@+id/viewCredential"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Credential"
                        android:textColor="@color/tile_text_color"
                        android:fontFamily="@font/cantora_one"
                        android:backgroundTint="#00000000"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#c0c0c0"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCertificates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_tile"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Achievements "
                        android:textColor="@color/title_text_color"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/add_achievements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageButton

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_baseline_add_24"
                            app:rippleColor="@color/hint_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="add" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/achievementName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Achievement Name"
                        android:textColor="@color/text_color"/>
                    <TextView
                        android:id="@+id/acievementType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project"/>
                    <TextView
                        android:id="@+id/publishedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Published Date : Jan 2021"/>
                    <Button
                        android:id="@+id/achievementViewCredential"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Credential"
                        android:textColor="@color/tile_text_color"
                        android:fontFamily="@font/cantora_one"
                        android:backgroundTint="#00000000"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#c0c0c0"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAchievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>